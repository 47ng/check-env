{
  "name": "@47ng/check-env",
  "version": "2.0.0",
  "main": "dist/index.js",
  "description": "Check that the critical environment variables are set",
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/check-env"
  },
  "keywords": [
    "environment",
    "environment-variables"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "dev": "nodemon -e ts,.env -w .env -w . -x 'run-s build:ts test'",
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "size": "size-limit",
    "ci": "run-s test build size"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^3.0.0",
    "@types/jest": "^25.1.0",
    "@types/node": "^13.1.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "1 KB"
    }
  ],
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn ci"
    }
  }
}
