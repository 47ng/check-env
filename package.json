{
  "name": "@47ng/check-env",
  "version": "1.3.1",
  "main": "dist/index.js",
  "description": "Check that the critical environment variables are set",
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/check-env"
  },
  "keywords": [
    "environment",
    "environment-variables"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "dev": "nodemon -e ts,.env -w .env -w . -x 'run-s build:ts test'",
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "size": "size-limit",
    "ci": "run-s test build size"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "size-limit": "^2.1.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "size": "1 KB"
    }
  ],
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "husky": {
    "pre-push": "run-s test build size"
  }
}
